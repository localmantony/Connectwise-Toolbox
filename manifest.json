{
  "manifest_version": 3,
  "name": "ConnectWise Toolbox",
  "version": "1.1",
  "description": "Various enhancements for ConnectWise",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://na.myconnectwise.net/*"],
      "js": ["Manage/content/TimeEntry.js"]
    },
    {
      "matches": ["https://absne.hostedrmm.com/automate/*"],
      "js": ["Automate/content/AutoRefresh.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
